        justify-self: flex-start;
        z-index: 1000;
    }
</style>
<div class="loader">
</div>
<script type="text/javascript">
    window.onload = function () {
        let loader = document.querySelector(".loader");
        loader.style.width = "0";
    };
    let visited = 0;
    window.onpageshow = function () {
        visited++;
        if (visited !== 0) {
            let loader = document.querySelector(".loader");
            loader.style.width = "0";
        }
    };
</script>